# Staging Environment
# Use: docker compose -f docker-compose.simple.yml --env-file .env.staging up -d

ENV=staging

# Ports (internal only, use nginx/traefik for external)
API_PORT=8080
WEB_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379
VESPA_PORT=19071
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Auth (enable for staging)
AUTH_TYPE=oidc
ENCRYPTION_KEY_SECRET=${ENCRYPTION_KEY_SECRET}  # Set in actual .env

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}  # Set in actual .env
POSTGRES_DB=onyx

# Storage (consider using real S3)
S3_AWS_ACCESS_KEY_ID=${S3_AWS_ACCESS_KEY_ID}
S3_AWS_SECRET_ACCESS_KEY=${S3_AWS_SECRET_ACCESS_KEY}

# Features
ENABLE_PAID_ENTERPRISE_EDITION_FEATURES=false
DISABLE_MODEL_SERVER=true
LOG_LEVEL=info

# Base URL (your staging domain)
WEB_DOMAIN=${WEB_DOMAIN}  # e.g., https://staging.yourdomain.com

# OAuth Connectors
OAUTH_GOOGLE_DRIVE_CLIENT_ID=${OAUTH_GOOGLE_DRIVE_CLIENT_ID}
OAUTH_GOOGLE_DRIVE_CLIENT_SECRET=${OAUTH_GOOGLE_DRIVE_CLIENT_SECRET}

# LLM API
GEN_AI_API_KEY=${GEN_AI_API_KEY}

# Image settings
IMAGE_TAG=staging
