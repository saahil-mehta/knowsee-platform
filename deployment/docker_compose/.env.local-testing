# Minimal .env for local testing of prod setup
# Copy this to .env: cp .env.local-testing .env

################################################################################
## REQUIRED FOR BASIC SETUP
################################################################################
IMAGE_TAG=latest

## Auth (disabled for testing)
AUTH_TYPE=disabled
ENCRYPTION_KEY_SECRET=your-secret-key-change-this-in-production

## Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

## MinIO/S3 (local object storage)
S3_ENDPOINT_URL=http://minio:9000
S3_AWS_ACCESS_KEY_ID=minioadmin
S3_AWS_SECRET_ACCESS_KEY=minioadmin
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

## Enterprise Features (set to false for testing)
ENABLE_PAID_ENTERPRISE_EDITION_FEATURES=false

## Logging
LOG_LEVEL=info

## Background Workers
USE_LIGHTWEIGHT_BACKGROUND_WORKER=true

## Services Pointers (don't change these)
POSTGRES_HOST=relational_db
VESPA_HOST=index
REDIS_HOST=cache
MODEL_SERVER_HOST=inference_model_server
INDEXING_MODEL_SERVER_HOST=indexing_model_server
INTERNAL_URL=http://api_server:8080


################################################################################
## OAUTH CONNECTORS (Add when testing OAuth)
################################################################################
## Google Drive OAuth
# OAUTH_GOOGLE_DRIVE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# OAUTH_GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret

## Linear OAuth
# LINEAR_CLIENT_ID=your-linear-client-id
# LINEAR_CLIENT_SECRET=your-linear-client-secret

## OpenAI API (for chat functionality)
# GEN_AI_API_KEY=sk-...

## Base URL (set this to your local machine's IP or localhost)
WEB_DOMAIN=http://localhost


################################################################################
## OPTIONAL: Enable extra connectors for testing
################################################################################
SHOW_EXTRA_CONNECTORS=true
