# Development Environment
# Use: docker compose -f docker-compose.simple.yml --env-file .env.development up

ENV=development

# Ports (exposed for local development)
API_PORT=8080
WEB_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379
VESPA_PORT=19071
VESPA_CONFIG_PORT=8081
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Auth (disabled for easy dev)
AUTH_TYPE=disabled
ENCRYPTION_KEY_SECRET=dev-secret-key-not-for-production

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=onyx

# Storage
S3_AWS_ACCESS_KEY_ID=minioadmin
S3_AWS_SECRET_ACCESS_KEY=minioadmin

# Features
ENABLE_PAID_ENTERPRISE_EDITION_FEATURES=false
DISABLE_MODEL_SERVER=true
LOG_LEVEL=debug

# Base URL
WEB_DOMAIN=http://localhost:3000

# OAuth Connectors (add your credentials)
# OAUTH_GOOGLE_DRIVE_CLIENT_ID=
# OAUTH_GOOGLE_DRIVE_CLIENT_SECRET=
# LINEAR_CLIENT_ID=
# LINEAR_CLIENT_SECRET=

# LLM API (OpenAI)
# GEN_AI_API_KEY=sk-...

# Image settings
IMAGE_TAG=latest
