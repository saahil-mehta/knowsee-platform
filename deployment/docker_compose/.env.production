# Production Environment
# Use: docker compose -f docker-compose.simple.yml --env-file .env.production up -d

ENV=production

# Ports (internal only - use nginx/load balancer for external access)
API_PORT=8080
WEB_PORT=3000
# Don't expose DB ports to host in production
POSTGRES_PORT=5432
REDIS_PORT=6379
VESPA_PORT=19071
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Auth (required!)
AUTH_TYPE=oidc
ENCRYPTION_KEY_SECRET=${ENCRYPTION_KEY_SECRET}  # MUST be set securely

# Database (consider using managed Postgres like RDS)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}  # MUST be set securely
POSTGRES_DB=onyx

# Storage (use real S3 or managed storage)
S3_AWS_ACCESS_KEY_ID=${S3_AWS_ACCESS_KEY_ID}
S3_AWS_SECRET_ACCESS_KEY=${S3_AWS_SECRET_ACCESS_KEY}

# Features
ENABLE_PAID_ENTERPRISE_EDITION_FEATURES=${ENABLE_PAID_ENTERPRISE_EDITION_FEATURES:-false}
DISABLE_MODEL_SERVER=true
LOG_LEVEL=info

# Base URL (your production domain)
WEB_DOMAIN=${WEB_DOMAIN}  # e.g., https://app.yourdomain.com

# OAuth Connectors
OAUTH_GOOGLE_DRIVE_CLIENT_ID=${OAUTH_GOOGLE_DRIVE_CLIENT_ID}
OAUTH_GOOGLE_DRIVE_CLIENT_SECRET=${OAUTH_GOOGLE_DRIVE_CLIENT_SECRET}
LINEAR_CLIENT_ID=${LINEAR_CLIENT_ID}
LINEAR_CLIENT_SECRET=${LINEAR_CLIENT_SECRET}

# LLM API
GEN_AI_API_KEY=${GEN_AI_API_KEY}

# Image settings
IMAGE_TAG=latest
DOCKER_REGISTRY=your-registry.com  # Your private registry
