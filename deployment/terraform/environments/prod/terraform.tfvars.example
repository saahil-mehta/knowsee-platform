# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================================================
# Copy this file to prod.tfvars and replace all placeholder values with your
# actual configuration values for production deployment.
#
# IMPORTANT: Never commit prod.tfvars with real values to version control.
# Add it to .gitignore to prevent accidental exposure of production credentials.

# Project name used for resource naming
project_name = "knowsee"

# ============================================================================
# REQUIRED VARIABLES - Replace all placeholder values below
# ============================================================================

# Your Production Google Cloud project ID
prod_project_id = "your-production-project-id"

# Your Staging Google Cloud project ID
staging_project_id = "your-staging-project-id"

# Your Google Cloud project ID that will be used to host the Cloud Build pipelines
cicd_runner_project_id = "your-cicd-project-id"

# GitHub organisation or username
repository_owner = "your-github-username"

# Name of the repository you added to Cloud Build
repository_name = "knowsee"

# ============================================================================
# OPTIONAL VARIABLES - Defaults are provided, modify if needed
# ============================================================================

# The Google Cloud region you will use to deploy the infrastructure
region = "europe-west2"

# Cron schedule for automated data ingestion pipeline (default: every Sunday at midnight)
pipeline_cron_schedule = "0 0 * * 0"

# The value can only be one of "global", "us" and "eu"
data_store_region = "eu"

# Set to true if you want Terraform to create the GitHub repository
create_repository = false
